.member-card.level-TRIAL {
  /* 体验会员 - 灰色调 */
}

.member-card.level-S {
  /* S级 - 蓝色调 */
}

.member-card.level-SS {
  /* SS级 - 紫色调 */
}

.member-card.level-SSS {
  /* SSS级 - 金色调 */
  box-shadow: 0 8rpx 30rpx rgba(243, 156, 18, 0.35);
}

.member-card.level-SSS .level-badge {
  background: rgba(255, 215, 0, 0.3);
}

.member-card.level-SSS .upgrade-btn {
