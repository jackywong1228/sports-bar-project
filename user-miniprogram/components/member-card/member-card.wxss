/* 会员卡片组件样式 */
.member-card {
  position: relative;
  margin: 0 24rpx;
  padding: 28rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.member-card:active {
  opacity: 0.95;
  transform: scale(0.99);
}

/* 卡片顶部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.level-info {
  display: flex;
  align-items: center;
}

.level-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

.level-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.upgrade-btn {
  padding: 10rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
}

.upgrade-btn text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

.upgrade-btn:active {
  background: rgba(255, 255, 255, 0.7);
}

/* 卡片内容 */
.card-body {
  position: relative;
  z-index: 1;
}

.benefits-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.benefit-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 6rpx;
}

.benefit-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
}

.benefit-divider {
  width: 1rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* TRIAL会员提示 */
.trial-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
}

/* 简洁模式 */
.card-simple {
  padding-top: 10rpx;
}

.simple-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 装饰元素 */
.card-decoration {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  pointer-events: none;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -60rpx;
  right: -40rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -40rpx;
  left: -30rpx;
}

