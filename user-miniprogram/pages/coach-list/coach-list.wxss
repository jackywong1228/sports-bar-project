.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 类型筛选 */
.type-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

.type-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
}

/* 教练列表 */
.coach-list {
  padding: 20rpx;
}

.coach-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.coach-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.coach-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.coach-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}

.coach-level {
  display: flex;
}

.level-star {
  color: #FFD700;
  font-size: 24rpx;
}

.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
}

.coach-intro {
  font-size: 26rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
  flex: 1;
}

.coach-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coach-stats {
  display: flex;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.coach-price {
  text-align: right;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
