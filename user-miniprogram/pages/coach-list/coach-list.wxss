/* coach-list.wxss - UI改造：墨绿主题 */

.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 类型筛选 */
.type-bar {
  display: flex;
  background: #FFFFFF;
  padding: 24rpx 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(26, 93, 58, 0.04);
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #6B7B6E;
  border-radius: 30rpx;
  margin: 0 10rpx;
  transition: all 0.2s;
  background: #F5F7F5;
}

.type-item.active {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(26, 93, 58, 0.3);
}

/* 教练列表 */
.coach-list {
  padding: 20rpx;
}

.coach-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(26, 93, 58, 0.08);
}

.coach-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  border: 2rpx solid rgba(201, 169, 98, 0.2);
}

.coach-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.coach-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E2D;
  margin-right: 16rpx;
}

.coach-level {
  display: flex;
}

/* 等级星星 - 金色 */
.level-star {
  color: #C9A962;
  font-size: 24rpx;
}

.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

/* 标签 - 墨绿色 */
.tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background: rgba(26, 93, 58, 0.1);
  color: #1A5D3A;
}

.coach-intro {
  font-size: 26rpx;
  color: #6B7B6E;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
  flex: 1;
}

.coach-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coach-stats {
  display: flex;
}

.stat-item {
  font-size: 24rpx;
  color: #6B7B6E;
  margin-right: 20rpx;
}

.coach-price {
  text-align: right;
}

/* 价格 - 墨绿色 */
.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.price-unit {
  font-size: 22rpx;
  color: #6B7B6E;
  margin-left: 4rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #6B7B6E;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7B6E;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #9CA89D;
}
