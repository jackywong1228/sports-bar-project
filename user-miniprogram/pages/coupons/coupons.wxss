.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }
.coupon { display: flex; background: #fff; border-radius: 12rpx; overflow: hidden; margin-bottom: 20rpx; }
.coupon-left { width: 200rpx; background: #FF6B35; color: #fff; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 30rpx; }
.value { font-size: 48rpx; font-weight: bold; }
.condition { font-size: 22rpx; opacity: 0.8; }
.coupon-right { flex: 1; padding: 30rpx; display: flex; flex-direction: column; justify-content: center; }
.name { font-size: 30rpx; font-weight: 500; margin-bottom: 8rpx; }
.expire { font-size: 24rpx; color: #999; }
.empty { text-align: center; padding: 100rpx 0; color: #999; }
