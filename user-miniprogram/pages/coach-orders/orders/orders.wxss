/* 页面容器 */
.page-container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
}

.filter-item.active {
  background: #e6f7ff;
  color: #1890ff;
  font-weight: 500;
}

/* 订单列表 */
.order-list {
  padding-bottom: 20rpx;
}

.order-item {
  margin-bottom: 20rpx;
}

.order-header {
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.order-status.paid {
  background: #e6f7ff;
  color: #1890ff;
}

.order-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.order-status.cancelled {
  background: #f5f5f5;
  color: #999;
}

.order-body {
  margin-bottom: 16rpx;
}

.order-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.order-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  align-items: center;
}

.order-amount .amount-label {
  font-size: 26rpx;
  color: #999;
}

.order-amount .amount-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #f5222d;
}

.order-actions {
  display: flex;
}

.order-actions .action-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.order-actions .action-btn.primary {
  background: #1890ff;
  color: #fff;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 40rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}
