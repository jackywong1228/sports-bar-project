.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 活动图片 */
.activity-image {
  width: 100%;
  height: 400rpx;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.activity-status {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 16rpx;
}

.activity-status.upcoming {
  background: #ff976a;
}

.activity-status.ongoing {
  background: #07c160;
}

.activity-status.ended {
  background: #999;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.activity-price {
  margin-bottom: 24rpx;
}

.activity-price .price {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B35;
}

.activity-price .free {
  font-size: 32rpx;
  color: #07c160;
  font-weight: 500;
}

.info-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.info-icon {
  margin-right: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  width: 160rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #FF6B35;
}

.detail-content,
.notice-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.bar-info {
  flex: 1;
}

.progress-info {
  display: flex;
  flex-direction: column;
}

.progress-bar {
  width: 200rpx;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  border-radius: 6rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

.btn-enroll {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-enroll.enrolled {
  background: #f5f5f5;
  color: #666;
}

.btn-enroll::after {
  border: none;
}

.btn-enroll[disabled] {
  opacity: 0.5;
}

.bottom-placeholder {
  height: 140rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
