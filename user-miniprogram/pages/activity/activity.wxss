/* activity.wxss - UI改造：墨绿主题 */

.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(26, 93, 58, 0.04);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #6B7B6E;
  position: relative;
  transition: all 0.2s;
}

.tab-item.active {
  color: #1A5D3A;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  border-radius: 3rpx;
}

/* 活动列表 */
.activity-list {
  padding: 20rpx;
}

.activity-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(26, 93, 58, 0.08);
}

.activity-image {
  width: 100%;
  height: 300rpx;
}

.activity-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 活动状态 - 即将开始(金色) */
.activity-status.upcoming {
  background: linear-gradient(135deg, #C9A962 0%, #D4B97A 100%);
}

/* 活动状态 - 进行中(墨绿) */
.activity-status.ongoing {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
}

/* 活动状态 - 已结束(灰色) */
.activity-status.ended {
  background: rgba(107, 123, 110, 0.8);
}

.activity-content {
  padding: 20rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E2D;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.activity-info {
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6B7B6E;
  margin-bottom: 8rpx;
}

.info-icon {
  margin-right: 8rpx;
}

.activity-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 价格 - 墨绿色 */
.activity-price .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.activity-price .free {
  font-size: 30rpx;
  color: #2E7D52;
  font-weight: 600;
}

.activity-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  width: 120rpx;
  height: 12rpx;
  background: #E8EDE9;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 12rpx;
}

/* 进度条 - 墨绿渐变 */
.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  border-radius: 6rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #6B7B6E;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #6B7B6E;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7B6E;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #9CA89D;
}
