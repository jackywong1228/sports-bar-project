/* 首页样式 - 温网风格（墨绿+薰衣草紫） */
.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-entries {
  display: flex;
  flex-wrap: wrap;
  padding: 28rpx 20rpx;
  background: #FFFFFF;
  margin: 0 24rpx;
  margin-top: -30rpx;
  border-radius: 16rpx;
  position: relative;
  z-index: 10;
  box-shadow: 0 4rpx 20rpx rgba(26, 93, 58, 0.08);
}

.entry-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
}

.entry-item:active {
  opacity: 0.7;
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.entry-text {
  font-size: 24rpx;
  color: #2C3E2D;
  font-weight: 500;
}

/* 板块 */
.section {
  margin-top: 24rpx;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E2D;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: linear-gradient(180deg, #1A5D3A 0%, #6B5B95 100%);
  border-radius: 2rpx;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6B7B6E;
}

.section-more:active {
  color: #1A5D3A;
}

.arrow {
  margin-left: 6rpx;
  color: #1A5D3A;
}

/* 场馆横向滚动 */
.venue-scroll {
  display: flex;
  white-space: nowrap;
  margin: 0 -28rpx;
  padding: 0 28rpx;
}

.venue-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.08);
  border: 1rpx solid #E8EDE9;
}

.venue-card:active {
  transform: scale(0.98);
}

.venue-image {
  width: 280rpx;
  height: 180rpx;
}

.venue-info {
  padding: 16rpx;
}

.venue-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E2D;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.venue-tags {
  margin-top: 8rpx;
}

.venue-price {
  margin-top: 12rpx;
  color: #1A5D3A;
}

.price-symbol {
  font-size: 22rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 22rpx;
  color: #6B7B6E;
  margin-left: 4rpx;
}

/* 活动列表 */
.activity-list {
  display: flex;
  flex-direction: column;
}

.activity-card {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F4F1;
}

.activity-card:last-child {
  border-bottom: none;
}

.activity-card:active {
  background: rgba(26, 93, 58, 0.02);
  margin: 0 -28rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.activity-image {
  width: 200rpx;
  height: 140rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E2D;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.activity-meta {
  margin-top: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #6B7B6E;
}

.activity-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.activity-price .price {
  font-size: 30rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.activity-price .free {
  font-size: 26rpx;
  color: #2E7D52;
  font-weight: 600;
}

.activity-status {
  font-size: 24rpx;
  color: #6B7B6E;
}

/* 教练列表 */
.coach-list {
  display: flex;
  flex-direction: column;
}

.coach-card {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F4F1;
}

.coach-card:last-child {
  border-bottom: none;
}

.coach-card:active {
  background: rgba(26, 93, 58, 0.02);
  margin: 0 -28rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid rgba(26, 93, 58, 0.1);
}

.coach-info {
  flex: 1;
  margin-left: 20rpx;
}

.coach-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E2D;
}

.coach-tags {
  margin-top: 8rpx;
}

.coach-rating {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}

.rating-star {
  color: #C9A962;
  font-size: 24rpx;
}

.rating-value {
  font-size: 24rpx;
  color: #6B7B6E;
  margin-left: 4rpx;
}

.coach-price {
  text-align: right;
}

.coach-price .price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.coach-price .price-unit {
  display: block;
  font-size: 22rpx;
  color: #6B7B6E;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  margin-right: 8rpx;
  font-weight: 500;
}

.tag-primary {
  background: rgba(26, 93, 58, 0.1);
  color: #1A5D3A;
}

.tag-secondary {
  background: rgba(107, 91, 149, 0.1);
  color: #6B5B95;
}

.tag-success {
  background: rgba(46, 125, 82, 0.1);
  color: #2E7D52;
}

/* 空提示 */
.empty-hint {
  text-align: center;
  padding: 50rpx 0;
  color: #9CA89D;
  font-size: 26rpx;
}

/* 底部安全区 */
.safe-bottom {
  height: 30rpx;
}
