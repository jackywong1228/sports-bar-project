.container { display: flex; height: 100vh; }
.category-scroll { width: 180rpx; background: #f5f5f5; }
.category-item { padding: 30rpx 20rpx; text-align: center; font-size: 28rpx; color: #666; }
.category-item.active { background: #fff; color: #1A5D3A; font-weight: 500; }
.food-scroll { flex: 1; }
.food-list { padding: 20rpx; }
.food-item { display: flex; padding: 20rpx; background: #fff; margin-bottom: 20rpx; border-radius: 12rpx; }
.food-image { width: 160rpx; height: 160rpx; border-radius: 8rpx; }
.food-info { flex: 1; margin-left: 20rpx; display: flex; flex-direction: column; }
.food-name { font-size: 30rpx; font-weight: 500; color: #333; }
.food-desc { font-size: 24rpx; color: #999; flex: 1; margin-top: 8rpx; }
.food-bottom { display: flex; justify-content: space-between; align-items: center; }
.food-price { font-size: 32rpx; color: #1A5D3A; font-weight: bold; }
.add-btn { width: 56rpx; height: 56rpx; background: #1A5D3A; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 36rpx; }
.cart-bar { position: fixed; bottom: 0; left: 0; right: 0; display: flex; align-items: center; padding: 20rpx 30rpx; background: #333; color: #fff; }
.cart-info { display: flex; align-items: center; }
.cart-badge { width: 40rpx; height: 40rpx; background: #1A5D3A; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24rpx; margin-right: 12rpx; }
.cart-text { font-size: 28rpx; }
.cart-total { flex: 1; text-align: right; font-size: 36rpx; font-weight: bold; margin-right: 20rpx; }
.cart-btn { padding: 16rpx 40rpx; background: #1A5D3A; border-radius: 30rpx; font-size: 28rpx; }
.empty { text-align: center; padding: 100rpx 0; color: #999; }
