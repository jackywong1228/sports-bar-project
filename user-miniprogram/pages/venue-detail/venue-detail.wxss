.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 图片轮播 */
.venue-swiper {
  width: 100%;
  height: 450rpx;
}

.venue-image {
  width: 100%;
  height: 100%;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.venue-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.venue-tags {
  display: flex;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
}

.venue-price {
  margin-bottom: 16rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF6B35;
}

.price-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B35;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
}

.venue-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #FF6B35;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  margin-left: 8rpx;
  color: #ccc;
}

/* 设施列表 */
.facility-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.facility-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 预约须知 */
.notice-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.bar-left {
  display: flex;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.bar-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.bar-item text {
  font-size: 22rpx;
  color: #666;
}

.btn-book {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-book::after {
  border: none;
}

.bottom-placeholder {
  height: 120rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
