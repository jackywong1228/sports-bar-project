.container { min-height: 100vh; background: #f5f5f5; padding-bottom: 120rpx; }
.cart-list { padding: 20rpx; }
.cart-item { display: flex; align-items: center; background: #fff; padding: 20rpx; margin-bottom: 20rpx; border-radius: 12rpx; }
.item-image { width: 120rpx; height: 120rpx; border-radius: 8rpx; }
.item-info { flex: 1; margin-left: 20rpx; }
.item-name { font-size: 28rpx; color: #333; display: block; }
.item-price { font-size: 30rpx; color: #FF6B35; font-weight: bold; }
.item-quantity { display: flex; align-items: center; }
.qty-btn { width: 48rpx; height: 48rpx; background: #f5f5f5; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 28rpx; }
.qty-num { width: 60rpx; text-align: center; font-size: 28rpx; }
.empty { text-align: center; padding: 100rpx 0; color: #999; }
.bottom-bar { position: fixed; bottom: 0; left: 0; right: 0; display: flex; align-items: center; padding: 20rpx 30rpx; background: #fff; }
.total { flex: 1; font-size: 28rpx; }
.price { font-size: 36rpx; color: #FF6B35; font-weight: bold; }
.btn-submit { width: 240rpx; height: 80rpx; line-height: 80rpx; background: #FF6B35; color: #fff; font-size: 30rpx; border-radius: 40rpx; }
