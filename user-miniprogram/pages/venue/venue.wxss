/* pages/venue/venue.wxss - 墨绿主题改造 */

.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 类型筛选 - 卡片式设计 */
.type-scroll {
  background: #FFFFFF;
  padding: 24rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(26, 93, 58, 0.04);
}

.type-cards {
  display: flex;
  padding: 0 20rpx;
  gap: 20rpx;
}

.type-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  min-width: 160rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.type-card:active {
  transform: scale(0.96);
}

.type-card.active {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  border-color: #C9A962;
  box-shadow: 0 8rpx 24rpx rgba(26, 93, 58, 0.3);
}

.type-card-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(26, 93, 58, 0.1);
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.type-card.active .type-card-icon {
  background: rgba(255, 255, 255, 0.2);
}

.type-icon-text {
  font-size: 32rpx;
}

.type-card-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.type-card.active .type-card-name {
  color: #fff;
}

/* 场馆列表 */
.venue-list {
  padding: 20rpx;
}

.venue-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(26, 93, 58, 0.08);
}

.venue-main {
  display: flex;
  padding: 20rpx;
}

.venue-image {
  width: 220rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.venue-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.venue-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E2D;
  margin-bottom: 8rpx;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

/* 标签 - 统一墨绿色 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background: rgba(26, 93, 58, 0.1);
  color: #1A5D3A;
  font-weight: 500;
}

/* 热门标签 - 金色系 */
.tag-hot {
  background: linear-gradient(135deg, #F5E6C8 0%, #E8D5A8 100%);
  color: #8B7333;
}

.venue-meta {
  flex: 1;
}

.venue-address {
  font-size: 24rpx;
  color: #9CA89D;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.venue-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

/* 价格 - 墨绿色 */
.venue-price {
  color: #1A5D3A;
}

.price-symbol {
  font-size: 22rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 22rpx;
  color: #6B7B6E;
}

/* 状态标签 - 墨绿色系 */
.venue-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.venue-status.available {
  background: rgba(46, 125, 82, 0.1);
  color: #2E7D52;
}

.venue-status.unavailable {
  background: rgba(107, 123, 110, 0.1);
  color: #6B7B6E;
}

/* 预约按钮 - 墨绿渐变 */
.venue-action {
  padding: 0 20rpx 20rpx;
}

.btn-book {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(26, 93, 58, 0.25);
}

.btn-book::after {
  border: none;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #6B7B6E;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7B6E;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #9CA89D;
}
