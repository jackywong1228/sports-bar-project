.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 类型筛选 */
.type-scroll {
  display: flex;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.type-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.type-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
}

/* 场馆列表 */
.venue-list {
  padding: 20rpx;
}

.venue-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.venue-main {
  display: flex;
  padding: 20rpx;
}

.venue-image {
  width: 220rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.venue-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.venue-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
}

.tag-hot {
  background: rgba(238, 10, 36, 0.1);
  color: #ee0a24;
}

.venue-meta {
  flex: 1;
}

.venue-address {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.venue-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.venue-price {
  color: #FF6B35;
}

.price-symbol {
  font-size: 22rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
}

.venue-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.venue-status.available {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.venue-status.unavailable {
  background: rgba(153, 153, 153, 0.1);
  color: #999;
}

/* 预约按钮 */
.venue-action {
  padding: 0 20rpx 20rpx;
}

.btn-book {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  border: none;
}

.btn-book::after {
  border: none;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
