.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.2s;
}

.tab-item.active {
  background: #1A5D3A;
  color: #fff;
}

/* 组队列表 */
.team-list {
  padding: 20rpx;
}

.team-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.team-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.sport-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  color: #fff;
}

.sport-badge.golf {
  background: linear-gradient(135deg, #43cea2, #185a9d);
}

.sport-badge.pickleball {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.sport-badge.tennis {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.sport-badge.squash {
  background: linear-gradient(135deg, #fa709a, #fee140);
}

.team-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.team-status.recruiting {
  background: #e6f7ff;
  color: #1890ff;
}

.team-status.full {
  background: #fff7e6;
  color: #fa8c16;
}

.team-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.team-status.cancelled {
  background: #f5f5f5;
  color: #999;
}

.team-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.team-meta {
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.meta-icon {
  margin-right: 8rpx;
}

.team-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.team-members {
  display: flex;
  align-items: baseline;
}

.members-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.members-label {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.team-fee {
  font-size: 26rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 发起组队按钮 */
.btn-create {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1A5D3A, #2E7D52);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(26, 93, 58, 0.3);
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  padding: 20rpx 30rpx;
  max-height: 60vh;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.form-picker.placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #1A5D3A;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.btn-submit[disabled] {
  background: #ccc;
}
