.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.login-section {
  flex: 1;
  padding: 40rpx 0;
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-wx {
  background: #07c160;
  color: #fff;
}

.btn[disabled] {
  opacity: 0.6;
}

.divider {
  display: flex;
  align-items: center;
  margin: 50rpx 0;
}

.divider .line {
  flex: 1;
  height: 1rpx;
  background: #e5e5e5;
}

.divider .text {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #999;
}

.icon-wx {
  margin-right: 12rpx;
}

.footer {
  padding: 40rpx 0;
  text-align: center;
}

.tip {
  font-size: 24rpx;
  color: #999;
}
