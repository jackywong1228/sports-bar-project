<view class="container" wx:if="{{!loading}}">
  <!-- 教练信息头部 -->
  <view class="coach-header">
    <image class="coach-avatar" src="{{coach.avatar || '/assets/images/avatar-default.png'}}" mode="aspectFill"></image>
    <view class="coach-info">
      <view class="coach-name-row">
        <text class="coach-name">{{coach.name}}</text>
        <view class="coach-level">
          <text class="level-star" wx:for="{{coach.level || 5}}" wx:key="*this">★</text>
        </view>
      </view>
      <view class="coach-type">{{coach.type_name || '专业教练'}}</view>
      <view class="coach-stats">
        <view class="stat-item">
          <text class="stat-value">{{coach.total_courses || 0}}</text>
          <text class="stat-label">课程数</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{coach.rating || 5.0}}</text>
          <text class="stat-label">评分</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{coach.price || 0}}</text>
          <text class="stat-label">金币/时</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 技能标签 -->
  <view class="section" wx:if="{{coach.skills && coach.skills.length > 0}}">
    <view class="section-title">专业技能</view>
    <view class="skill-list">
      <view class="skill-tag" wx:for="{{coach.skills}}" wx:key="*this">
        {{item}}
      </view>
    </view>
  </view>

  <!-- 教练介绍 -->
  <view class="section" wx:if="{{coach.introduction}}">
    <view class="section-title">教练介绍</view>
    <view class="intro-content">
      <text>{{coach.introduction}}</text>
    </view>
  </view>

  <!-- 资质证书 -->
  <view class="section" wx:if="{{coach.certificates && coach.certificates.length > 0}}">
    <view class="section-title">资质证书</view>
    <view class="cert-list">
      <view class="cert-item" wx:for="{{coach.certificates}}" wx:key="*this">
        <text class="cert-icon">✓</text>
        <text class="cert-name">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 教练相册 -->
  <view class="section" wx:if="{{coach.photos && coach.photos.length > 0}}">
    <view class="section-title">教练相册</view>
    <view class="photo-grid">
      <image
        class="photo-item"
        wx:for="{{coach.photos}}"
        wx:key="*this"
        src="{{item}}"
        mode="aspectFill"
        bindtap="previewImage"
        data-src="{{item}}"
      ></image>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="bar-price">
      <text class="price-label">课程价格</text>
      <view class="price-row">
        <text class="price-value">{{coach.price || 0}}</text>
        <text class="price-unit">金币/小时</text>
      </view>
    </view>
    <button class="btn-book" bindtap="goToBooking">立即预约</button>
  </view>

  <!-- 底部占位 -->
  <view class="bottom-placeholder"></view>
</view>

<!-- 加载中 -->
<view class="loading-container" wx:if="{{loading}}">
  <text class="loading-text">加载中...</text>
</view>
