.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

.section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

/* 订单详情 */
.item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item:last-child {
  border-bottom: none;
}

.item-name {
  color: #333;
}

.item-price {
  color: #FF6B35;
  font-weight: 500;
}

/* 取餐方式 */
.order-type-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-type-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.order-type-item.active {
  background: #FFF5F0;
  border-color: #FF6B35;
}

.type-content {
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.type-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.type-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 预约时间选择 */
.schedule-picker {
  background: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
}

.picker-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-row:last-child {
  border-bottom: none;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #FF6B35;
}

.arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.schedule-tips {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #FFF9E6;
  border-radius: 8rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #FFB800;
  color: #fff;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #996600;
}

/* 备注 */
.remark {
  width: 100%;
  height: 150rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.total-info {
  flex: 1;
}

.total {
  font-size: 28rpx;
  color: #333;
}

.price {
  font-size: 36rpx;
  color: #FF6B35;
  font-weight: bold;
}

.schedule-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF6B35;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
}

.btn[disabled] {
  background: #ccc;
}
