.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* TRIAL会员提示横幅 */
.trial-banner {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  padding: 20rpx 30rpx;
}

.trial-banner-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.trial-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #fff;
}

.trial-text {
  font-size: 26rpx;
  color: #fff;
}

.trial-link {
  font-size: 26rpx;
  color: #FFE066;
  font-weight: 600;
  text-decoration: underline;
  margin-left: 4rpx;
}

/* 额度提示横幅 */
.quota-banner {
  background: linear-gradient(135deg, #4A90E2 0%, #6BA8F0 100%);
  padding: 16rpx 30rpx;
  text-align: center;
}

.quota-text {
  font-size: 26rpx;
  color: #fff;
}

/* 场馆类型选择 - 卡片式设计 */
.type-cards-scroll {
  background: #fff;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.type-cards {
  display: flex;
  padding: 0 20rpx;
  gap: 20rpx;
}

.type-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  min-width: 200rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.type-card:active {
  transform: scale(0.96);
}

.type-card.active {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  border-color: #C9A962;
  box-shadow: 0 8rpx 24rpx rgba(26, 93, 58, 0.3);
}

.type-card-icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(26, 93, 58, 0.1);
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.type-card.active .type-card-icon {
  background: rgba(255, 255, 255, 0.2);
}

.type-icon-text {
  font-size: 36rpx;
}

.type-card-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.type-card.active .type-card-name {
  color: #fff;
}

.type-card-count {
  font-size: 22rpx;
  color: #999;
}

.type-card.active .type-card-count {
  color: rgba(255, 255, 255, 0.8);
}

/* 日期选择 */
.date-scroll {
  display: flex;
  white-space: nowrap;
  background: #fff;
  padding: 24rpx 20rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 130rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  background: #f5f7f5;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.date-item:active {
  transform: scale(0.96);
}

.date-item.active {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  border-color: #C9A962;
  box-shadow: 0 6rpx 16rpx rgba(26, 93, 58, 0.25);
}

.date-week {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.date-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.date-item.active .date-week,
.date-item.active .date-day {
  color: #fff;
}

/* 预约日历 */
.calendar-wrapper {
  background: #fff;
  margin-top: 20rpx;
}

.calendar-header {
  display: flex;
  position: sticky;
  top: 0;
  z-index: 10;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.time-column-header {
  width: 110rpx;
  min-width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #1A5D3A;
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  border-right: 1rpx solid #eee;
}

.venues-header-scroll {
  flex: 1;
  overflow: hidden;
}

.venues-header {
  display: flex;
}

.venue-header-item {
  width: 180rpx;
  min-width: 180rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #eee;
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
}

.venue-header-item .venue-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A5D3A;
}

.calendar-body {
  background: #fff;
}

.calendar-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-column {
  width: 110rpx;
  min-width: 110rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
  background: #fafafa;
  border-right: 1rpx solid #eee;
}

.slots-scroll {
  flex: 1;
  overflow: hidden;
}

.slots-row {
  display: flex;
}

.slot-cell {
  width: 180rpx;
  min-width: 180rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  border-right: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.slot-cell.available {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #1A5D3A;
}

.slot-cell.available:active {
  background: linear-gradient(135deg, #c8e6c9 0%, #a5d6a7 100%);
  transform: scale(0.96);
}

.slot-cell.reserved {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #c62828;
}

.slot-cell.selected {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%) !important;
  color: #fff !important;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1A5D3A;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 24rpx;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-dot.available {
  background: #e8f5e9;
  border: 1rpx solid #1A5D3A;
}

.legend-dot.reserved {
  background: #ffebee;
  border: 1rpx solid #c62828;
}

.legend-dot.selected {
  background: #1A5D3A;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.booking-summary {
  flex: 1;
}

.summary-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
}

.summary-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.summary-time {
  font-size: 26rpx;
  color: #666;
}

.summary-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.summary-quota {
  font-size: 28rpx;
  font-weight: 500;
  color: #4A90E2;
}

.btn-submit {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1A5D3A;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  opacity: 0.6;
}

.bottom-placeholder {
  height: 200rpx;
}
