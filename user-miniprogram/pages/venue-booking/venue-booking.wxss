.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* TRIAL会员提示横幅 */
.trial-banner {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  padding: 20rpx 30rpx;
}

.trial-banner-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.trial-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #fff;
}

.trial-text {
  font-size: 26rpx;
  color: #fff;
}

.trial-link {
  font-size: 26rpx;
  color: #FFE066;
  font-weight: 600;
  text-decoration: underline;
  margin-left: 4rpx;
}

/* 额度提示横幅 */
.quota-banner {
  background: linear-gradient(135deg, #4A90E2 0%, #6BA8F0 100%);
  padding: 16rpx 30rpx;
  text-align: center;
}

.quota-text {
  font-size: 26rpx;
  color: #fff;
}

/* 场馆类型选择 */
.type-tabs {
  display: flex;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.type-tab {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  margin: 0 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.type-tab.active {
  background: #1A5D3A;
  color: #fff;
}

.venue-count {
  font-size: 24rpx;
  margin-left: 4rpx;
}

/* 日期选择 */
.date-scroll {
  display: flex;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 110rpx;
  margin-right: 16rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.date-item.active {
  background: #1A5D3A;
}

.date-week {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-item.active .date-week,
.date-item.active .date-day {
  color: #fff;
}

/* 预约日历 */
.calendar-wrapper {
  background: #fff;
  margin-top: 20rpx;
}

.calendar-header {
  display: flex;
  position: sticky;
  top: 0;
  z-index: 10;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.time-column-header {
  width: 100rpx;
  min-width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
  background: #fafafa;
  border-right: 1rpx solid #eee;
}

.venues-header-scroll {
  flex: 1;
  overflow: hidden;
}

.venues-header {
  display: flex;
}

.venue-header-item {
  width: 140rpx;
  min-width: 140rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #eee;
  background: #fafafa;
}

.venue-header-item .venue-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.calendar-body {
  background: #fff;
}

.calendar-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-column {
  width: 100rpx;
  min-width: 100rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  background: #fafafa;
  border-right: 1rpx solid #eee;
}

.slots-scroll {
  flex: 1;
  overflow: hidden;
}

.slots-row {
  display: flex;
}

.slot-cell {
  width: 140rpx;
  min-width: 140rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  border-right: 1rpx solid #f0f0f0;
  transition: all 0.2s;
}

.slot-cell.available {
  background: #e8f5e9;
  color: #1A5D3A;
}

.slot-cell.available:active {
  background: #c8e6c9;
}

.slot-cell.reserved {
  background: #ffebee;
  color: #c62828;
}

.slot-cell.selected {
  background: #1A5D3A !important;
  color: #fff !important;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1A5D3A;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 24rpx;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-dot.available {
  background: #e8f5e9;
  border: 1rpx solid #1A5D3A;
}

.legend-dot.reserved {
  background: #ffebee;
  border: 1rpx solid #c62828;
}

.legend-dot.selected {
  background: #1A5D3A;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.booking-summary {
  flex: 1;
}

.summary-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
}

.summary-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.summary-time {
  font-size: 26rpx;
  color: #666;
}

.summary-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.summary-quota {
  font-size: 28rpx;
  font-weight: 500;
  color: #4A90E2;
}

.btn-submit {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1A5D3A;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  opacity: 0.6;
}

.bottom-placeholder {
  height: 200rpx;
}
