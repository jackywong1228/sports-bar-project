/* 页面容器 */
.page-container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 状态卡片 */
.status-card {
  text-align: center;
  padding: 40rpx;
}

.status-card.pending {
  background: linear-gradient(135deg, #fff7e6, #ffe7ba);
}

.status-card.confirmed,
.status-card.in_progress {
  background: linear-gradient(135deg, #e6f7ff, #bae7ff);
}

.status-card.completed {
  background: linear-gradient(135deg, #f6ffed, #d9f7be);
}

.status-card.cancelled {
  background: linear-gradient(135deg, #fff1f0, #ffccc7);
}

.status-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
}

/* 信息卡片 */
.info-card {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.info-list {
  padding: 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-item .label {
  color: #999;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
  text-align: right;
}

.info-item .value.price {
  color: #f5222d;
  font-weight: 600;
}

.info-item .value.clickable {
  color: #1890ff;
}

.call-icon {
  margin-left: 8rpx;
}

/* 完课码 */
.qrcode-card {
  text-align: center;
}

.qrcode-content {
  padding: 40rpx 0;
}

.qrcode-canvas {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}

.qrcode-tip {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}

/* 评价信息 */
.rating-content {
  padding: 20rpx 0;
}

.rating-stars {
  margin-bottom: 16rpx;
}

.rating-stars .star {
  font-size: 40rpx;
  color: #ddd;
  margin-right: 8rpx;
}

.rating-stars .star.active {
  color: #fadb14;
}

.rating-comment {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-bar button {
  flex: 1;
  margin: 0 10rpx;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.btn-reject {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
}
