.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.status-card.rejected {
  background: #fff5f5;
}

.status-icon-text {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.status-icon-text.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-icon-text.rejected {
  background: #fff1f0;
  color: #ff4d4f;
}

.status-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.status-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.status-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 表单 */
.apply-form {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.form-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.form-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.radio-item radio {
  margin-right: 12rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
}

/* 等待提示 */
.waiting-tips {
  text-align: center;
  padding: 40rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.back-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  color: #4A90E2;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 2rpx solid #4A90E2;
}
