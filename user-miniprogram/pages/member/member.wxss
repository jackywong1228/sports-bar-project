.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #1A5D3A, #2E7D52);
  padding: 60rpx 30rpx;
  color: #fff;
}

.level-info {
  display: flex;
  flex-direction: column;
}

.level {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.expire {
  font-size: 26rpx;
  opacity: 0.8;
}

.section {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  border: 2rpx solid #eee;
}

.card.recommended {
  border-color: #1A5D3A;
  background: linear-gradient(135deg, rgba(26, 93, 58, 0.1), #fff);
}

.card-badge {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: linear-gradient(135deg, #1A5D3A, #2E7D52);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 0 0 8rpx 8rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-level {
  font-size: 24rpx;
  color: #1A5D3A;
  background: rgba(26, 93, 58, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.card-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.card-price .price {
  font-size: 44rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.card-price .original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.card-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.card-info .duration {
  font-size: 26rpx;
  color: #666;
}

.card-info .bonus {
  font-size: 24rpx;
  color: #1A5D3A;
  background: rgba(26, 93, 58, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.card-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #1A5D3A, #2E7D52);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
}

.card.recommended .card-btn {
  background: linear-gradient(135deg, #1A5D3A, #145030);
}

.benefits-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.benefit-item {
  width: calc(50% - 8rpx);
  background: #f5f7f5;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  box-sizing: border-box;
}

.benefit-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.benefit-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.empty {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}
