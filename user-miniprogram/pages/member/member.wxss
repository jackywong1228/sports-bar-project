.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #FF6B35, #FF8F65);
  padding: 60rpx 30rpx;
  color: #fff;
}

.level-info {
  display: flex;
  flex-direction: column;
}

.level {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.expire {
  font-size: 26rpx;
  opacity: 0.8;
}

.section {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  border: 2rpx solid #eee;
}

.card.recommended {
  border-color: #FF6B35;
  background: linear-gradient(135deg, #fff5f0, #fff);
}

.card-badge {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8F65);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 0 0 8rpx 8rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-level {
  font-size: 24rpx;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.card-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.card-price .price {
  font-size: 44rpx;
  font-weight: bold;
  color: #FF6B35;
}

.card-price .original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.card-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.card-info .duration {
  font-size: 26rpx;
  color: #666;
}

.card-info .bonus {
  font-size: 24rpx;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.card-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #FF6B35, #FF8F65);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
}

.card.recommended .card-btn {
  background: linear-gradient(135deg, #FF6B35, #FF4500);
}

.empty {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}
