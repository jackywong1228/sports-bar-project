/* 我的页面样式 - 温网风格（墨绿+薰衣草紫） */
.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 70rpx 30rpx 50rpx;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  color: #fff;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

.user-level {
  display: flex;
  align-items: center;
  padding: 4rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.user-level.vip {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.user-level.fitness {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
}

.user-level.ball {
  background: linear-gradient(135deg, #52c41a 0%, #95de64 100%);
}

.level-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.level-tag {
  font-size: 22rpx;
  color: #fff;
}

.user-header.guest .login-text {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.user-header.guest .login-hint {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 会员卡片容器 */
.member-card-wrapper {
  margin: -30rpx 0 20rpx;
  position: relative;
  z-index: 10;
}

/* 资产卡片 */
.asset-card {
  display: flex;
  background: #FFFFFF;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(26, 93, 58, 0.1);
  position: relative;
  z-index: 10;
}

.asset-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.asset-item:active {
  opacity: 0.7;
}

.asset-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2C3E2D;
  margin-bottom: 8rpx;
}

.asset-value.recharge-btn {
  font-size: 28rpx;
  color: #1A5D3A;
  padding: 8rpx 24rpx;
  background: rgba(26, 93, 58, 0.1);
  border-radius: 30rpx;
  font-weight: 600;
}

.asset-label {
  font-size: 24rpx;
  color: #6B7B6E;
}

.asset-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8EDE9;
  align-self: center;
}

/* 教练入口卡片 - 墨绿渐变 */
.coach-entry-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(26, 93, 58, 0.3);
}

.coach-entry-left {
  display: flex;
  align-items: center;
}

.coach-entry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.coach-entry-info {
  display: flex;
  flex-direction: column;
}

.coach-entry-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 6rpx;
}

.coach-entry-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.coach-entry-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.coach-entry-card:active {
  opacity: 0.9;
}

/* 会员卡片 */
.vip-card {
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #6B5B95 0%, #8677A9 100%);
  border-radius: 16rpx;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(107, 91, 149, 0.3);
}

.vip-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.vip-title {
  font-size: 30rpx;
  font-weight: 600;
}

.vip-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.vip-desc {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 菜单卡片 */
.menu-card {
  background: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F4F1;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(26, 93, 58, 0.02);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #2C3E2D;
}

.menu-arrow {
  font-size: 28rpx;
  color: #B8C4B9;
}

/* 分组标题 */
.menu-group-title {
  padding: 20rpx 24rpx 10rpx;
  font-size: 26rpx;
  color: #6B7B6E;
  font-weight: 500;
}

/* 训练日历卡片 */
.training-card {
  background: #FFFFFF;
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.08);
}

.training-card:active {
  opacity: 0.9;
}

.training-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.training-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E2D;
}

.training-more {
  font-size: 24rpx;
  color: #1A5D3A;
}

.training-stats {
  display: flex;
  justify-content: space-around;
}

.training-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.training-stats .stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #1A5D3A;
  margin-bottom: 8rpx;
}

.training-stats .stat-label {
  font-size: 24rpx;
  color: #6B7B6E;
}

/* 排行榜入口卡片 - 金色渐变 */
.rank-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #C9A962 0%, #D4B97A 100%);
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(201, 169, 98, 0.3);
}

.rank-card:active {
  opacity: 0.9;
}

.rank-left {
  display: flex;
  align-items: center;
}

.rank-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.rank-icon-emoji {
  width: 80rpx;
  height: 80rpx;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.rank-info {
  display: flex;
  flex-direction: column;
}

.rank-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 6rpx;
}

.rank-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.rank-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ==================== 资料编辑 ==================== */

.avatar-edit-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.avatar-edit-btn::after {
  border: none;
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 4rpx 0;
  border-radius: 0 0 60rpx 60rpx;
}

.edit-icon-text {
  font-size: 28rpx;
  margin-left: 8rpx;
  opacity: 0.8;
  color: #fff;
}

/* 昵称编辑弹窗 */
.nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.nickname-modal-content {
  position: relative;
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  z-index: 1001;
}

.nickname-modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.nickname-modal-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.nickname-modal-btns {
  display: flex;
  gap: 20rpx;
}

.nickname-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.nickname-modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.nickname-modal-btn.confirm {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  color: #fff;
}
