/* 我的页面样式 - 温网风格（墨绿+薰衣草紫） */
.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 70rpx 30rpx 50rpx;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  color: #fff;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.user-level {
  display: inline-block;
}

.level-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10px);
}

.user-header.guest .login-text {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.user-header.guest .login-hint {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 资产卡片 */
.asset-card {
  display: flex;
  background: #FFFFFF;
  margin: -30rpx 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(26, 93, 58, 0.1);
  position: relative;
  z-index: 10;
}

.asset-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.asset-item:active {
  opacity: 0.7;
}

.asset-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2C3E2D;
  margin-bottom: 8rpx;
}

.asset-value.recharge-btn {
  font-size: 28rpx;
  color: #1A5D3A;
  padding: 8rpx 24rpx;
  background: rgba(26, 93, 58, 0.1);
  border-radius: 30rpx;
  font-weight: 600;
}

.asset-label {
  font-size: 24rpx;
  color: #6B7B6E;
}

.asset-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8EDE9;
  align-self: center;
}

/* 会员卡片 */
.vip-card {
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #6B5B95 0%, #8677A9 100%);
  border-radius: 16rpx;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(107, 91, 149, 0.3);
}

.vip-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.vip-title {
  font-size: 30rpx;
  font-weight: 600;
}

.vip-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.vip-desc {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 菜单卡片 */
.menu-card {
  background: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F4F1;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(26, 93, 58, 0.02);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #2C3E2D;
}

.menu-arrow {
  font-size: 28rpx;
  color: #B8C4B9;
}

/* 分组标题 */
.menu-group-title {
  padding: 20rpx 24rpx 10rpx;
  font-size: 26rpx;
  color: #6B7B6E;
  font-weight: 500;
}
