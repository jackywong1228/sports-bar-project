.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 套餐网格 */
.package-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.package-item {
  width: calc(33.33% - 14rpx);
  padding: 24rpx 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  border: 4rpx solid transparent;
}

.package-item.active {
  background: rgba(255, 107, 53, 0.1);
  border-color: #FF6B35;
}

.package-coins {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.package-bonus {
  font-size: 22rpx;
  color: #FF6B35;
  margin-bottom: 8rpx;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

/* 自定义输入 */
.custom-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.input-prefix {
  font-size: 36rpx;
  color: #333;
  margin-right: 12rpx;
}

.input {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
}

/* 说明 */
.notice {
  padding: 30rpx;
}

.notice-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #999;
  line-height: 2;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
}

.btn-recharge {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F65 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.btn-recharge::after {
  border: none;
}
