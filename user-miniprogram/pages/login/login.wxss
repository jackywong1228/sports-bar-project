.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx;
  background: #fff;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.login-section {
  flex: 1;
  padding: 40rpx 0;
}

.btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  border: none;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  color: #fff;
}

.btn-phone {
  background: #07c160;
  color: #fff;
}

.btn-outline {
  background: #fff;
  border: 2rpx solid #1A5D3A;
  color: #1A5D3A;
}

.btn[disabled] {
  opacity: 0.6;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider .line {
  flex: 1;
  height: 1rpx;
  background: #e5e5e5;
}

.divider .text {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #999;
}

.input-group {
  margin-bottom: 24rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #f5f5f5;
  border-radius: 48rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.footer {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  padding: 40rpx 0;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

.link {
  font-size: 24rpx;
  color: #1A5D3A;
}
