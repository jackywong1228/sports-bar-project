.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1A5D3A;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #1A5D3A;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status.status-pending {
  color: #ff976a;
}

.order-status.status-paid,
.order-status.status-processing {
  color: #1890ff;
}

.order-status.status-completed {
  color: #07c160;
}

.order-status.status-cancelled,
.order-status.status-refunded {
  color: #999;
}

.order-content {
  display: flex;
  padding: 24rpx;
}

.order-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.order-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.order-desc {
  font-size: 26rpx;
  color: #999;
  flex: 1;
}

.order-price {
  color: #1A5D3A;
}

.price-symbol {
  font-size: 24rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
}

.btn-action {
  padding: 16rpx 36rpx;
  min-height: 72rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  border-radius: 36rpx;
  background: #f5f5f5;
  color: #666;
  margin-left: 16rpx;
  border: none;
}

.btn-action::after {
  border: none;
}

.btn-action.primary {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  color: #fff;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
