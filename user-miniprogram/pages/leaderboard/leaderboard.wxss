/* 排行榜页面样式 - 温网风格 */
.container {
  min-height: 100vh;
  background: #F5F7F5;
}

/* 周期选择 */
.period-tabs {
  display: flex;
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  padding: 20rpx 40rpx 30rpx;
}

.period-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  border-radius: 30rpx;
  transition: all 0.3s;
}

.period-tab.active {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-weight: 600;
}

/* 筛选栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #F5F7F5;
  border-radius: 12rpx;
}

.filter-picker text:first-child {
  font-size: 28rpx;
  color: #2C3E2D;
}

.filter-picker .arrow {
  font-size: 20rpx;
  color: #6B7B6E;
}

/* 我的排名卡片 */
.my-rank-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  margin: 0 24rpx 20rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.3);
}

.my-rank-left {
  display: flex;
  align-items: center;
}

.my-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 20rpx;
}

.my-info {
  display: flex;
  flex-direction: column;
}

.my-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 6rpx;
}

.my-stats {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.my-rank-right {
  text-align: right;
}

.my-rank-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.my-rank-num.unranked {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 排行榜列表 */
.leaderboard-list {
  background: #FFFFFF;
  margin: 0 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(26, 93, 58, 0.05);
}

.list-header {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #F5F7F5;
  font-size: 24rpx;
  color: #6B7B6E;
  font-weight: 500;
}

.header-rank {
  width: 100rpx;
  text-align: center;
}

.header-user {
  flex: 1;
}

.header-duration {
  width: 140rpx;
  text-align: center;
}

.header-count {
  width: 100rpx;
  text-align: center;
}

/* 排行项 */
.rank-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #F0F4F1;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #6B7B6E;
}

.rank-num image {
  width: 50rpx;
  height: 50rpx;
}

.rank-medal {
  font-size: 44rpx;
}

.rank-num.gold {
  color: #FFD700;
}

.rank-num.silver {
  color: #C0C0C0;
}

.rank-num.bronze {
  color: #CD7F32;
}

/* 用户信息 */
.user-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  color: #2C3E2D;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.user-level {
  display: inline-block;
}

.user-level text {
  font-size: 20rpx;
  color: #6B7B6E;
  padding: 2rpx 10rpx;
  background: rgba(26, 93, 58, 0.1);
  border-radius: 6rpx;
}

/* 时长列 */
.duration-col {
  width: 140rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.duration-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A5D3A;
}

.duration-unit {
  font-size: 20rpx;
  color: #6B7B6E;
}

/* 打卡次数列 */
.count-col {
  width: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #6B7B6E;
}

/* 加载中 */
.loading-tip {
  padding: 60rpx 0;
  text-align: center;
  color: #6B7B6E;
  font-size: 28rpx;
}

/* 空状态 */
.empty-tip {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-tip text {
  font-size: 28rpx;
  color: #6B7B6E;
}
