<view class="container">
  <view class="menu-section">
    <view class="section-title">消息通知</view>
    <view class="menu">
      <view class="item" bindtap="subscribeMessages">
        <view class="item-left">
          <text class="item-text">订阅消息通知</text>
          <text class="item-hint">接收优惠券、活动、预约等通知</text>
        </view>
