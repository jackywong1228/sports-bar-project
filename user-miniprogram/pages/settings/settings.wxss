.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 0;
}

.menu-section {
  margin-bottom: 20rpx;
}

.section-title {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #999;
}

.menu {
  background: #fff;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.item-text {
  font-size: 28rpx;
  color: #333;
}

.item-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.arrow {
  color: #ccc;
  font-size: 28rpx;
}

.btn-logout {
  margin: 60rpx 30rpx;
  background: #fff;
  color: #FF6B35;
  border: 2rpx solid #FF6B35;
  border-radius: 40rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}
