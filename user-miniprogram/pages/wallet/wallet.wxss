.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #1A5D3A 0%, #2E7D52 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.balance-tabs {
  display: flex;
  margin-bottom: 30rpx;
}

.tab {
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
}

.tab.active {
  background: #fff;
  color: #1A5D3A;
}

.balance-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-row {
  display: flex;
  align-items: baseline;
}

.balance-value {
  font-size: 72rpx;
  font-weight: bold;
}

.balance-unit {
  font-size: 28rpx;
  margin-left: 12rpx;
  opacity: 0.8;
}

.btn-recharge {
  padding: 16rpx 48rpx;
  background: #fff;
  color: #1A5D3A;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: none;
}

.btn-recharge::after {
  border: none;
}

/* 区块标题 */
.section-header {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 记录列表 */
.record-list {
  background: #fff;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-source {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-amount {
  font-size: 36rpx;
  font-weight: 500;
}

.record-amount.income {
  color: #07c160;
}

.record-amount.expense {
  color: #333;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: #fff;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
