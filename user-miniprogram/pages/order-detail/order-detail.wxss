.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }
.status { background: #FF6B35; color: #fff; padding: 40rpx; text-align: center; font-size: 36rpx; border-radius: 12rpx; }
.info { background: #fff; padding: 30rpx; margin-top: 20rpx; border-radius: 12rpx; }
.title { font-size: 32rpx; font-weight: 500; display: block; margin-bottom: 12rpx; }
.no { font-size: 26rpx; color: #999; }
.price { background: #fff; padding: 30rpx; margin-top: 20rpx; border-radius: 12rpx; }
.amount { font-size: 36rpx; color: #FF6B35; font-weight: bold; }
.time { background: #fff; padding: 30rpx; margin-top: 20rpx; border-radius: 12rpx; font-size: 26rpx; color: #999; }
