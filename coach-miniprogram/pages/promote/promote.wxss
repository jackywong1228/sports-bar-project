/* 页面容器 */
.page-container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
}

.tab-item.active {
  background: #1890ff;
  color: #fff;
  font-weight: 500;
}

/* 二维码卡片 */
.qrcode-card {
  text-align: center;
  margin-bottom: 20rpx;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.qrcode-wrapper {
  width: 360rpx;
  height: 360rpx;
  margin: 0 auto;
  padding: 20rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
}

.qrcode-canvas {
  width: 320rpx;
  height: 320rpx;
}

.qrcode-actions {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.qrcode-actions .action-btn {
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin: 0 16rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.qrcode-actions .action-btn.primary {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
}

/* 规则卡片 */
.rules-card {
  margin-bottom: 20rpx;
}

.rules-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.rule-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-icon {
  width: 60rpx;
  font-size: 36rpx;
}

.rule-text {
  flex: 1;
}

.rule-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.rule-desc {
  font-size: 24rpx;
  color: #999;
}

.rule-desc .highlight {
  color: #f5222d;
  font-weight: 500;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
  flex-wrap: wrap;
}

.stats-item {
  width: 50%;
  text-align: center;
  padding: 20rpx 0;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 记录卡片 */
.record-card {
  margin-bottom: 20rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.record-list {
  margin: 0 -24rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.record-status.registered {
  background: #e6f7ff;
  color: #1890ff;
}

.record-status.consumed {
  background: #f6ffed;
  color: #52c41a;
}

.record-reward {
  font-size: 28rpx;
  font-weight: 600;
  color: #f5222d;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}
