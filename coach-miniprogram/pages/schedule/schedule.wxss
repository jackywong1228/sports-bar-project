/* 页面容器 */
.page-container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 周选择器 */
.week-picker {
  margin-bottom: 20rpx;
}

.picker-header {
  padding: 10rpx 0;
}

.nav-btn {
  padding: 16rpx 24rpx;
  color: #1890ff;
  font-size: 26rpx;
}

.week-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 排期表格 */
.schedule-grid {
  padding: 0;
  overflow: hidden;
}

.grid-header {
  display: flex;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-cell {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
}

.header-cell.today {
  background: #e6f7ff;
}

.header-cell .week-day {
  color: #999;
  margin-bottom: 4rpx;
}

.header-cell .date {
  color: #333;
  font-weight: 500;
}

.time-col {
  width: 120rpx;
  flex-shrink: 0;
}

.day-col {
  flex: 1;
  min-width: 80rpx;
}

/* 表格内容 */
.grid-body {
  max-height: 600rpx;
}

.grid-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.grid-row:last-child {
  border-bottom: none;
}

.time-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
  background: #fafafa;
  padding: 16rpx 0;
}

.slot-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  font-size: 22rpx;
  border-left: 1rpx solid #f0f0f0;
}

.slot-cell.available {
  background: #f6ffed;
  color: #52c41a;
}

.slot-cell.reserved {
  background: #e6f7ff;
  color: #1890ff;
}

.slot-cell.unavailable {
  background: #fff;
  color: #d9d9d9;
}

.slot-cell.today {
  background: #fffbe6;
}

/* 图例 */
.legend {
  margin-bottom: 20rpx;
}

.legend-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.legend-items {
  display: flex;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.legend-dot.available {
  background: #52c41a;
}

.legend-dot.reserved {
  background: #1890ff;
}

.legend-dot.unavailable {
  background: #d9d9d9;
}

/* 提示 */
.tips {
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.quick-actions .action-btn {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.quick-actions .action-btn:active {
  background: #e8e8e8;
}
